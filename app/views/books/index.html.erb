<h1>蔵書の一覧</h1>

<table class="books">
  <col class="title" />
  <col class="authors" />
  <col class="publish_year" />
  <col class="links" />
  <% @books.each do |book| %>
  <tr>
    <td><%= link_to book.title, book %></td>
    <td><%= book.authors %></td>
    <td><%= book.publish_year %></td>
    <td>
      <%= link_to "修正", [ :edit, book ] %>
      <%= link_to "貸し出し", [ :check_out, book ], :method => :put %>
      <%= link_to "削除", book, :method => :delete,
        :confirm => "本当に削除しますか？ " %>
    </td>
  </tr>
  <% end %>
</table>

<%= link_to "新規登録", [ :new, :book ] %>
